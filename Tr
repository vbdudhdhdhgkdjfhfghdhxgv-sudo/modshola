<body>
  <div class="panel">
    <h2>Crear historia animada</h2><label>Texto de la escena</label>
<textarea id="text" rows="4" placeholder="Escribe la historia..."></textarea>

<label>Color de fondo</label>
<input type="color" id="bg" value="#1e293b" />

<label>Animación</label>
<select id="animation">
  <option value="fade">Desvanecer</option>
  <option value="slide">Deslizar</option>
  <option value="zoom">Zoom</option>
}</n    </select>

<button onclick="addScene()">Agregar escena</button>
<button onclick="playStory()" style="margin-top:10px;background:#16a34a">Reproducir historia</button>

<hr style="margin:16px 0;border-color:#1e293b" />
<p>✔ Funciona sin internet<br>✔ Ideal para GitHub Pages<br>✔ Editable y ampliable</p>

  </div>  <div class="canvas" id="canvas"></div>  <script>
    const scenes = [];
    let current = 0;

    function addScene() {
      const text = document.getElementById('text').value;
      const bg = document.getElementById('bg').value;
      const animation = document.getElementById('animation').value;

      if (!text) return alert('Escribe un texto');

      scenes.push({ text, bg, animation });
      document.getElementById('text').value = '';
      alert('Escena agregada');
    }

    function playStory() {
      const canvas = document.getElementById('canvas');
      canvas.innerHTML = '';
      current = 0;
      if (scenes.length === 0) return alert('No hay escenas');
      showScene();
    }

    function showScene() {
      const canvas = document.getElementById('canvas');
      canvas.innerHTML = '';
      const s = scenes[current];
      const div = document.createElement('div');
      div.className = 'scene active ' + (s.animation !== 'fade' ? s.animation : '');
      div.style.background = s.bg;
      div.textContent = s.text;
      canvas.appendChild(div);

      setTimeout(() => {
        current++;
        if (current < scenes.length) showScene();
      }, 2500);
    }
  </script></body>
</html>
